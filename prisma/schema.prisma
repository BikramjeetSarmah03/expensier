generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Expense {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  userId String

  title       String
  description String?
  amount      Int

  date      DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@map("expenses")
}

model Gains {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  userId String

  title       String
  description String?
  amount      Int

  date      DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@map("gains")
}
